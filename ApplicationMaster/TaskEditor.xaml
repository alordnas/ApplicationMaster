<UserControl x:Class="Casamia.TaskEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
			 xmlns:core ="clr-namespace:Casamia.Core" 
			 >

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="200" />
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal">
			<Label Margin="5" Content="任务名称："/>
			<TextBox Text="{Binding Name}" Width="200" />
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<Label Content="任务描述："/>
			<TextBox Text="{Binding Description}" Width="200"/>
		</StackPanel>

		<Grid Grid.Row="2">
			<Label  Content="命令列表" VerticalAlignment="Center" HorizontalAlignment="Left" />
		</Grid>
		<StackPanel Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft">
			<Button Content="添加" Click="addSubTask_Button_Click" />
			<Button Content="删除" Click="deleteSubTask_Button_Click" />
			<Button Content="清空" Click="clearSubTask_Button_Click" />
		</StackPanel>
		<ListBox x:Name="commandListBox" ItemsSource="{Binding Path=CommandList}" IsSynchronizedWithCurrentItem="True" Grid.Row="4">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Path=Description}"></TextBlock>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<GroupBox Grid.Row="5" Header="命令详细">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Grid Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
					<Label Content="运行程序：" Grid.Column="0"/>
					<ComboBox 
							ItemsSource="{Binding Source={x:Static  core:ExecutorManager.Instance}, Path=Executors}" 
							SelectedItem="{Binding ElementName=commandListBox , Path=SelectedItem.TheExecutor, Mode=OneWay}"
							x:Name="exe_ComboBox" 
						Width="auto"
							Grid.Column="1" IsSynchronizedWithCurrentItem="True">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Name}" ToolTip="{Binding Description}"></TextBlock>
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					<ComboBox
							Text="{Binding ElementName=commandListBox , Path=SelectedItem.Argument}"
							x:Name="arg_Combox" 
							ItemsSource="{Binding ElementName=exe_ComboBox , Path=SelectedItem.PotentialParameters}" 
							IsEditable="True"
							Grid.Column="2" IsSynchronizedWithCurrentItem="True"
							/>
					<Button
							Grid.Column="3"
							x:Name="addPath_Button" 
							Content="+路径占位符" 
							Click="addPath_Button_Click"/>
				</Grid>
				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<TextBlock Text="描述 " Grid.Column="0" />
					<TextBox Text="{Binding ElementName=commandListBox , Path=SelectedItem.Description}" Grid.Column="1" />
				</Grid>

				<StackPanel Grid.Row="2" Orientation="Horizontal">
					<Label Content="超时："/>

					<TextBox 
							x:Name="timeout_TextBox" 
							Text="{Binding ElementName=commandListBox ,Path=SelectedItem.Timeout}" 
							Margin="0,10" 
							Width="90"  
							/>
					<Label Content="秒"/>
				</StackPanel>
			</Grid>
		</GroupBox>
	</Grid>

</UserControl>
