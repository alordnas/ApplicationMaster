<UserControl x:Class="Casamia.TaskEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 xmlns:core ="clr-namespace:Casamia.Core" Height="Auto" Width="Auto" Padding="10"
			 >

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="1*" />
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal">
			<Label Margin="5" Content="任务名称："/>
			<TextBox 
									x:Name="taskName_TextBox" 
									Text="{Binding Name}" 
									Margin="0,5" 
									Width="200" 
									IsEnabled="True" >
			</TextBox>
			<Label Content="*"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<Label Margin="5" Content="任务描述："/>
			<TextBox x:Name="describe_TextBox" 
										 Text="{Binding Description}" 
										 Margin="0,5" 
										 Width="500" 
										 IsEnabled="True" >
			</TextBox>
		</StackPanel>

		<Label Grid.Row="2" Content="命令列表：" Margin="5,0"/>
		
		<ScrollViewer Grid.Row="3" Margin="10">
			<ListBox x:Name="commandListBox"
					 ItemsSource="{Binding Path=CommandList}"
					 IsSynchronizedWithCurrentItem="True"
					 />
		</ScrollViewer>
		<StackPanel Grid.Row="4" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10,0">
			<Button x:Name="deleteSubTask_Button" Width="56" Margin="0,5,20,5" Content="删除" Click="deleteSubTask_Button_Click"/>
			<Button x:Name="clearSubTask_Button" Width="56" Margin="0,5,20,5" Content="清空" Click="clearSubTask_Button_Click"/>
		</StackPanel>
		<GroupBox Grid.Row="5" Header="命令详细" Margin="10,0" >
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Grid Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
					<Label Margin="8" Content="运行程序：" Grid.Column="0"/>
					<ComboBox 
							ItemsSource="{Binding Source={x:Static  core:ExecutorManager.Instance}, Path=Executors}" 
							SelectedItem="{Binding ElementName=commandListBox , Path=SelectedItem.TheExecutor, Mode=OneWay}"
							x:Name="exe_ComboBox" 
						Width="auto"
							Grid.Column="1" IsSynchronizedWithCurrentItem="True">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding Name}" ToolTip="{Binding Description}"></TextBlock>
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					<ComboBox
							Text="{Binding ElementName=commandListBox , Path=SelectedItem.Argument}"
							x:Name="arg_Combox" 
							ItemsSource="{Binding ElementName=exe_ComboBox , Path=SelectedItem.PotentialParameters}" 
							IsEditable="True"
							Grid.Column="2" IsSynchronizedWithCurrentItem="True"
							/>
					<Button
							Grid.Column="3"
							x:Name="addPath_Button" 
							Content="+路径占位符" 
							Click="addPath_Button_Click"/>
				</Grid>
				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<TextBlock Text="描述 " Grid.Column="0" />
					<TextBox Text="{Binding ElementName=commandListBox , Path=SelectedItem.Description}" Grid.Column="1" />
				</Grid>

				<StackPanel Grid.Row="2" Orientation="Horizontal">
					<Label Margin="8" Content="超时："/>

					<TextBox 
							x:Name="timeout_TextBox" 
							Text="{Binding ElementName=commandListBox ,Path=SelectedItem.Timeout}" 
							Margin="0,10" 
							Width="90"  
							/>
					<Label Margin="0,8" Content="秒"/>
				</StackPanel>

				<StackPanel 
						Grid.Row="3" 
						Orientation="Horizontal" 
						FlowDirection="RightToLeft">
					<Button x:Name="addSubTask_Button" 
									Content="添加到执行列表"
									Width="120" 
									Click="addSubTask_Button_Click" />
				</StackPanel>
			</Grid>
		</GroupBox>
	</Grid>

</UserControl>
